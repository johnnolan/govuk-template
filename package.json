{
  "name": "govuk-template",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "description": "Example repository setup for a GOV.UK service.",
  "author": "John Nolan <me@johnnolan.dev>",
  "license": "MIT",
  "scripts": {
    "build": " npm run build-scss && BABEL_ENV=build babel src --out-dir dist && node build.js",
    "build-scss": "npm rebuild sass --verbose && sass --verbose src/main.scss:dist/stylesheets/main.css src/gds.scss:dist/stylesheets/gds.css --style compressed",
    "jshint": "jshint src/",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "lint:spell": "cspell **/*.md",
    "lint:all": "yarn run lint:check && yarn run lint:spell",
    "pa11y-ci": "pa11y-ci '_site/**/*.html'",
    "test": "CI=true jest --coverage",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.9",
    "@babel/core": "7.25.2",
    "@babel/eslint-parser": "7.25.1",
    "@babel/plugin-transform-member-expression-literals": "^7.22.5",
    "@babel/plugin-transform-modules-commonjs": "^7.22.5",
    "@babel/plugin-transform-property-literals": "^7.22.5",
    "@babel/plugin-transform-reserved-words": "^7.22.5",
    "@babel/plugin-transform-runtime": "^7.22.9",
    "@babel/preset-env": "7.25.3",
    "@babel/runtime": "^7.22.6",
    "babel-jest": "^29.6.1",
    "core-js": "^3.31.1",
    "cspell": "8.14.1",
    "es6-promise": "^4.2.8",
    "esbuild": "^0.23.0",
    "esbuild-sass-plugin": "^2.10.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "govuk-frontend": "4.8.0",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.6.1",
    "jest-junit": "^16.0.0",
    "jshint": "2.13.6",
    "pa11y-ci": "3.1.0",
    "prettier": "3.3.3"
  },
  "eslintIgnore": [],
  "jest-junit": {
    "outputDirectory": "./test-results/junit",
    "outputName": "results.xml"
  }
}
