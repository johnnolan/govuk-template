{
  "name": "opg-modernising-lpa-docs",
  "version": "1.0.0",
  "main": "index.js",
  "author": "John Nolan <john.nolan@digital.justice.gov.uk>",
  "license": "MIT",
  "scripts": {
    "build": " npm run build-scss && BABEL_ENV=build babel src --out-dir dist && node build.js",
    "build-scss": "npm rebuild sass --verbose && sass --verbose src/main.scss:dist/stylesheets/main.css src/gds.scss:dist/stylesheets/gds.css --style compressed",
    "jshint": "jshint src/",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "lint:spell": "cspell **/*.md",
    "lint:all": "yarn run lint:check && yarn run lint:spell",
    "pa11y-ci": "pa11y-ci '_site/**/*.html'",
    "test": "CI=true jest --coverage",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@babel/core": "7.22.9",
    "@babel/eslint-parser": "7.22.9",
    "@babel/preset-env": "7.22.9",
    "babel-jest": "^29.6.1",
    "cspell": "6.31.2",
    "esbuild": "^0.18.16",
    "esbuild-sass-plugin": "^2.10.0",
    "eslint": "8.45.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "govuk-frontend": "4.7.0",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.6.1",
    "jest-junit": "^16.0.0",
    "jshint": "2.13.6",
    "pa11y-ci": "3.0.1",
    "prettier": "2.8.8"
  },
  "eslintIgnore": [],
  "jest-junit": {
    "outputDirectory": "./test-results/junit",
    "outputName": "results.xml"
  }
}
